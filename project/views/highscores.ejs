<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link rel="stylesheet" href="./css/reset.css" />
    <link rel="stylesheet" href="./css/style.css" />
    <link rel="stylesheet" href="./css/highscores.css" />
    <link rel="stylesheet" href="./css/dark-mode.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald&family=Qwitcher+Grypen:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <script src="./javascript/profile.js"></script>
    <link rel="icon" type="image/jpg" href="/assets/images/favicon.jpg">
  </head>
  <body>
    <%- include("partials/nav") %>
    <main>
      <section class="highscores-page">
        <h1 class="page-title">Highscores</h1>
        
        <!-- 10 Rounds Highscores -->
        <article>
          <h2><i class="bi bi-list-ol"></i> 10 Rounds</h2>
          <table>
            <thead>
              <tr>
                <th>Level</th>
                <th>Gebruikersnaam</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
              <tr class="current-user">
                <td><%= player.level %></td>
                <td><%= player.username %></td>
                <td><%= player.hs10 %></td>
              </tr>
              <tr>
                <td>25</td>
                <td>ilias</td>
                <td>10</td>
              </tr>
              <tr>
                <td>12</td>
                <td>test</td>
                <td>7</td>
              </tr>
            </tbody>
          </table>
        </article>

        <!-- De Sudden Death Highscore -->
        <article>
          <h2><i class="bi bi-lightning"></i> Sudden Death</h2>
          <table>
            <thead>
              <tr>
                <th>Level</th>
                <th>Gebruikersnaam</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
              <tr class="current-user">
                <td><%= player.level %></td>
                <td><%= player.username %></td>
                <td><%= player.hsSd %></td>
              </tr>
              <tr>
                <td>25</td>
                <td>tawan</td>
                <td>20</td>
              </tr>
              <tr>
                <td>12</td>
                <td>test</td>
                <td>15</td>
              </tr>
            </tbody>
          </table>
        </article>

        <!-- Timed Quiz Highscores -->
        <article>
          <h2><i class="bi bi-stopwatch"></i> Timed Quiz</h2>
          <table>
            <thead>
              <tr>
                <th>Level</th>
                <th>Gebruikersnaam</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
              <tr class="current-user">
                <td><%= player.level %></td>
                <td><%= player.username %></td>
                <td><%= player.hsTq %></td>
              </tr>
              <tr>
                <td>25</td>
                <td>jessie</td>
                <td>18</td>
              </tr>
              <tr>
                <td>12</td>
                <td>test</td>
                <td>14</td>
              </tr>
            </tbody>
          </table>
        </article>
      </section>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link rel="stylesheet" href="./css/reset.css" />
    <link rel="stylesheet" href="./css/style.css" />
    <link rel="stylesheet" href="./css/highscores.css" />
    <link rel="stylesheet" href="./css/dark-mode.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald&family=Qwitcher+Grypen:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <script src="./javascript/profile.js"></script>
    <link rel="icon" type="image/jpg" href="/assets/images/favicon.jpg">
  </head>
  <body>
    <%- include("partials/nav") %>
    <main>
      <section class="highscores-page">
        <h1 class="page-title">Highscores</h1>
        
        <!-- 10 Rounds Highscores -->
        <article>
          <h2><i class="bi bi-list-ol"></i> 10 Rounds</h2>
          <table>
            <thead>
              <tr>
                <th>Level</th>
                <th>Gebruikersnaam</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
              <%for (let i = 0; i < tenRounds.length; i++) {%>
                <%if (i === 0) {%>
                  <tr class="current-user">
                  <td><%= tenRounds[0].level %></td>
                  <td><%= tenRounds[0].username %></td>
                  <td><%= tenRounds[0].tenRoundsHs %></td>
              </tr>
                <%} else {%>
                  <tr>
                  <td><%= tenRounds[i].level %></td>
                  <td><%= tenRounds[i].username %></td>
                  <td><%= tenRounds[i].tenRoundsHs %></td>
                <%}%>
              <%}%>
            </tbody>
          </table>
        </article>

        <!-- De Sudden Death Highscore -->
        <article>
          <h2><i class="bi bi-lightning"></i> Sudden Death</h2>
          <table>
            <thead>
              <tr>
                <th>Level</th>
                <th>Gebruikersnaam</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
                <%for (let i = 0; i < suddenDeath.length; i++) {%>
                <%if (i === 0) {%>
                  <tr class="current-user">
                  <td><%= suddenDeath[0].level %></td>
                  <td><%= suddenDeath[0].username %></td>
                  <td><%= suddenDeath[0].suddenDeathHs %></td>
              </tr>
                <%} else {%>
                  <tr>
                  <td><%= suddenDeath[i].level %></td>
                  <td><%= suddenDeath[i].username %></td>
                  <td><%= suddenDeath[i].suddenDeathHs %></td>
                <%}%>
              <%}%>
            </tbody>
          </table>
        </article>

        <!-- Timed Quiz Highscores -->
        <article>
          <h2><i class="bi bi-stopwatch"></i> Timed Quiz</h2>
          <table>
            <thead>
              <tr>
                <th>Level</th>
                <th>Gebruikersnaam</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
              <%for (let i = 0; i < timedQuiz.length; i++) {%>
                <%if (i === 0) {%>
                  <tr class="current-user">
                  <td><%= timedQuiz[0].level %></td>
                  <td><%= timedQuiz[0].username %></td>
                  <td><%= timedQuiz[0].timedQuizHs %></td>
              </tr>
                <%} else {%>
                  <tr>
                  <td><%= timedQuiz[i].level %></td>
                  <td><%= timedQuiz[i].username %></td>
                  <td><%= timedQuiz[i].timedQuizHs %></td>
                <%}%>
              <%}%>
            </tbody>
          </table>
        </article>
      </section>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>